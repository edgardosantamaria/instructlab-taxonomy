root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = false
tab_width = 4

[*.{yaml,yml}]
trim_trailing_whitespace = true

[*.sh]
indent_size = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
indent_size = 4

[*.puml]
indent_size = unset
